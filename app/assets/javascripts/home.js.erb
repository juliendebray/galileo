function changeTitleOnHomePage() {
  var itemList = ['<%= image_tag("ta_logo_rating.png")%>', 'DE facebook', 'DE google', 'DE TES AMIS', 'DE autres']
  for (var i = 0; i < itemList.length; i++) {
    console.log(itemList[i]);
    $('#show-item').css('visibility', 'hidden');
    sleep(2000);
    $('#show-item').html(itemList[i]);
    $('#show-item').css('visibility', 'visible');
    sleep(4000);
  }
}

