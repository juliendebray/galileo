<div id="navbar">
  <div class ="container fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, {class: "navbar-brand"} do %>
        <%= image_tag("earth.png", id: "logo") %>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('ourstorynav'), story_index_path %></li>
      </ul>
    </div>



    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <% if current_user.provider %>
                  <%= image_tag current_user.picture, id:'profile-pic', class: "img img-circle" %>
                <% else %>
                  <img src="http://lorempixel.com/30/30" id="profile-pic" alt="">
                <% end %>

              <%= current_user.email %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to t('signout'), destroy_user_session_path, method: 'delete' %>
              </li>
              <li>
                <%= link_to t('tripsnav'), user_path(current_user) %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t('signup'), new_user_registration_path %>
          </li>
          <li>
            <%= link_to t('signin'), new_user_session_path %>
          </li>
          <li>
            <%= link_to user_omniauth_authorize_path(:facebook) do %>
            <i class="fa fa-facebook"></i>
            <% end %>
          </li>
        <% end -%>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            <%= I18n.locale %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'English', :locale => 'en' %></li>
