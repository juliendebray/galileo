                      <%= image_tag experience.experience_pictures.first.picture.url(:medium), class: "img-responsive" %>
                    <% end %>
                  </div>
                  <div class="experience-name text-center">
                    <small><%= experience.name %></small><br>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <br><br><br>
        <div class="row text-center">
