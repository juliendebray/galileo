<% content_for :navbar_hp_css do %>
  <%= stylesheet_link_tag 'navbar_hp' %>
<% end %>
<% content_for :logo_hp do %>
  <%= true %>
<% end %>
<div class="homepage_story">
  <div class="fullpage">
    <div id="homeblock" class="banner text-center">
      <div class="title fader">
        <h1><%= t('.firstline') %></h1>
        <!-- <div class="vertical-spacer-xs"></div> -->
        <h3>Le meilleur du web pour organiser le voyage de tes rêves</h3>
      </div>
      <div class="vertical-spacer-xxs"></div>
      <div class="tr-grey-bg">
        <% if user_signed_in? %>
          <%= form_for(Trip.new, html: { class: "form-inline" }) do |f| %>
            <div class="form-group minor-block" class="text-center">
              <%= f.hidden_field(:latitude) %>
              <%= f.hidden_field(:longitude) %>
              <%= f.search_field(:query, placeholder: t('.searchplaceholder'), required: true ) %>
              <%= f.submit( t('.searchbutton'), class: 'btn btn-info btn-sm') %>
            </div>
          <% end %>
        <% else %>
          <h3><%= link_to 'INSCRIPTION', new_user_registration_path,  {class: "btn btn-info btn-lg fader"}%></h3>
        <% end %>
      </div>
    </div>
  </div>
  <div class="help hp-section">
    <div class="vertical-spacer-xs"></div>
    <h2 class="text-center">Comment ça marche ?</h2>
    <p class='text-center container'>EXPLORIZERS te permet de savoir "que faire" et "que voir" lors de ton prochain voyage en se basant sur les recommandations et services des principaux sites de voyage.</p>
    <div class="vertical-spacer-sm"></div>
    <div class="logo-container container">
      <div class="row">
        <div class="col-xs-4 col-sm-2 vcenter">
          <div class="logo-item text-center">
            <%= image_tag('ta_logo.png', alt:'Tripadvisor Logo Officiel') %>
          </div>
        </div><!-- Remove space when return to the line
        --><div class="col-xs-4 col-sm-2 vcenter">
          <div class="logo-item text-center">
            <%= image_tag('lp_logo.png', alt:'Lonely Planet Logo Officiel') %>
          </div>
        </div><!-- Remove space when return to the line
        --><div class="col-xs-4 col-sm-2 vcenter">
          <div class="logo-item text-center">
            <%= image_tag('f_logo.png', alt:'Facebook Logo Officiel') %>
          </div>
        </div><!-- Remove space when return to the line
        --><div class="col-xs-4 col-sm-2 vcenter">
          <div class="logo-item text-center">
            <%= image_tag('gg_logo.png', alt:'Google Logo Officiel') %>
          </div>
        </div><!-- Remove space when return to the line
        --><div class="col-xs-4 col-sm-2 vcenter">
          <div class="logo-item text-center">
            <%= image_tag('fsq_logo.png', alt:'Foursquare Logo Officiel') %>
          </div>
        </div><!-- Remove space when return to the line
        --><div class="col-xs-4 col-sm-2 vcenter">
          <div class="logo-item text-center">
            <%= image_tag('gdr_logo.png', alt:'Le Guide du Routard Logo Officiel') %>
          </div>
        </div>
      </div>
    </div>
    <div class="vertical-spacer"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-4 text-center text-contrast">
          <div class="how-header">
            <i class="fa fa-map-marker"></i>
          </div>
          <div class="vertical-spacer-xs"></div>
          <div class="how-content">
            Sélectionne les <strong>meilleures expériences</strong> à faire pendant ton voyage sur la base de milliers de notes et d'avis.
          </div>
          <div class="vertical-spacer"></div>
        </div>
        <div class="col-sm-12 col-md-4 text-center text-contrast">
          <div class="how-header">
            <i class="fa fa-comment"></i>
          </div>
          <div class="vertical-spacer-xs"></div>
          <div class="how-content">
            Inspire-toi des <strong>conseils les plus utiles</strong> des guides et voyageurs afin d'éviter attrapes-touristes et autres galères.
          </div>
          <div class="vertical-spacer"></div>
        </div>
        <div class="col-sm-12 col-md-4 text-center text-contrast">
          <div class="how-header">
            <i class="fa fa-cloud-download"></i>
          </div>
          <div class="vertical-spacer-xs"></div>
          <div class="how-content">
            Récupère ton <strong>itinéraire personnalisé</strong>, partage-le avec tes amis et emmène-le dans tes valises.
          </div>
          <div class="vertical-spacer"></div>
        </div>
      </div>
    </div>
    <h2 class="text-center">Explore la destination du moment</h2>
    <p class='text-center'>Laisse-toi inspirer par la destination du moment.</p>
    <%= link_to Destination.first do %>
      <div class="destination-item text-center">
        <%= image_tag(Destination.first.picture.url(:banner), class: 'max-width') %>
        <div class="destination-name text-center">
          <%= Destination.first.name %>
          <br>
          <small>Découvrir les meilleures expériences</small>
        </div>
      </div>
    <% end %>
    <div class="vertical-spacer-sm"></div>
    <div class="experience-promo">
      <h2 class="text-center">Découvre ces expériences uniques</h2>
      <p class='text-center'>Prends quelques minutes pour t'évader.</p>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="experience-box">
            <%= link_to experience_path(421), target: "_blank" do %>
              <div class="experience-picture text-center">
                <%= image_tag Experience.find(421).experience_pictures.first.picture.url(:banner) %>
              </div>
              <div class="experience-name text-center">
                <small>Parc National du Glacier - Montana</small><br>
              </div>
            <% end %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="experience-box">
            <%= link_to experience_path(214), target: "_blank" do %>
              <div class="experience-picture text-center">
                <%= image_tag Experience.find(214).experience_pictures.first.picture.url(:banner) %>
              </div>
              <div class="experience-name text-center">
                <small>Plongée à Bali</small><br>
              </div>
            <% end %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="experience-box">
            <%= link_to experience_path(239), target: "_blank" do %>
              <div class="experience-picture text-center">
                <%= image_tag Experience.find(239).experience_pictures.first.picture.url(:banner) %>
              </div>
              <div class="experience-name text-center">
                <small>Allée des Baobabs</small><br>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="vertical-spacer-xs"></div>
      <div class="row text-center">
        <%= link_to "Voir d'autres expériences", experiences_path, {class: "btn btn-info"} %>
      </div>
    </div>
    <div class="vertical-spacer"></div>
    <h2 class="text-center">Explore le monde</h2>
    <p class='text-center'>Parcours la carte des expériences sur le monde entier.</p>
    <%= link_to map_path do %>
      <div class="destination-item text-center">
        <%= image_tag('maphands.jpg', width: 851, height: 440, class: 'max-width') %>
        <div class="destination-name text-center">
          Carte interactive
          <br>
          <small>Voir les expériences du monde entier</small>
        </div>
      </div>
    <% end %>
    <div class="vertical-spacer hide-xs"></div>
    </div>
  <%= render partial: 'shared/footer' %>
</div>
<%= content_for(:before_js) do %>
  <%= javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false&libraries=places&amp;key=AIzaSyCf77HD5LQkLbAcZWkBXKj-DLkXQJ9vHEc" %>
<% end %>