<div class="homepage_story">
  <div class="fullpage">
    <div id="homeblock" class="banner text-center">
      <div class="title fader">
        <h1><%= @hp_hash[:title] %></h1>
        <!-- <div class="vertical-spacer-xs"></div> -->
        <h3><%= @hp_hash[:subtitle] %></h3>
      </div>
      <div class="vertical-spacer-xxs"></div>
      <div class="tr-grey-bg">
        <% if user_signed_in? %>
          <%= form_for(Trip.new, html: { class: "form-inline" }) do |f| %>
            <div class="form-group minor-block" class="text-center">
              <%= f.hidden_field(:latitude) %>
              <%= f.hidden_field(:longitude) %>
              <%= f.search_field(:query, placeholder: t('.searchplaceholder'), required: true ) %>
              <%= f.submit( t('.searchbutton'), class: 'btn btn-info btn-sm', onclick:"ga('send', 'event', 'User', 'Search Button', 'Click on search button from hp');") %>
            </div>
          <% end %>
        <% else %>
          <h3><%= link_to 'INSCRIVEZ-VOUS POUR COMMENCER', new_user_registration_path,  {class: "btn btn-info btn-lg fader", onclick:"ga('send', 'event', 'User', 'Sign Up Button', 'Click on sign up button from hp');"}%></h3>
        <% end %>
      </div>
      <i class="fa fa-angle-down"></i>
    </div>
  </div>
  <div class="help hp-section">
    <div class="vertical-spacer-xs"></div>
    <h2 class="text-center">Comment ça marche ?</h2>
    <p class='text-center container'><%= @hp_hash[:description] %></p>
    <div class="vertical-spacer-sm"></div>

    <div class="vertical-spacer-xs"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-4 text-center text-contrast">
          <%= simple_format(@hp_hash[:item][:one]) %>
