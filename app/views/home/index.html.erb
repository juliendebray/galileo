<% content_for :navbar_hp_css do %>
  <%= stylesheet_link_tag 'navbar_hp' %>
<% end %>

<% content_for :logo_hp do %>
  <%= true %>
<% end %>

<div class="homepage_story">
  <div class="fullpage">
    <div id="homeblock" class="banner text-center">
      <div class="title">
        <h1><%= t('.firstline') %></h1>
        <!-- <div class="vertical-spacer-xs"></div> -->
        <h3>Le meilleur du web pour organiser le voyage de rêve</h3>
      </div>
      <div class="vertical-spacer-xxs"></div>
      <div class="tr-grey-bg">
        <div>
          <%= image_tag 'homepage-partners-logos.png', id: 'references-logos' %>
        </div>
        <% if user_signed_in? %>
        <%= form_for(Trip.new, html: { class: "form-inline" }) do |f| %>
          <div class="form-group minor-block" class="text-center">
            <%= f.hidden_field(:latitude) %>
            <%= f.hidden_field(:longitude) %>
            <%= f.search_field(:query, placeholder: t('.searchplaceholder'), required: true ) %>
            <%= f.submit( t('.searchbutton'), class: 'btn btn-info btn-sm') %>
          </div>
          <% end %>
        <% else %>
          <div class="vertical-spacer-xs"></div>
          <h3><%= link_to 'INSCRIPTION GRATUITE', new_user_registration_path,  {class: "btn btn-info btn-lg"}%></h3>
        <% end %>
      </div>
    </div>
  </div>

  <div class="help hp-section">
    <h2 class="text-center">Comment ça marche ?</h2>
    <p class='text-center'>EXPLORIZERS te permet de savoir quoi faire et quoi voir lors de ton prochain voyage.</p>
    <div class="vertical-spacer"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-4 text-center text-contrast">
          <div class="how-header">
            <i class="fa fa-map-marker"></i>
          </div>
          <div class="vertical-spacer-xs"></div>
          <div class="how-content">
            Sélectionne les <strong>meilleures expériences</strong> à faire pendant ton voyage sur la base de milliers de notes de d'avis.
          </div>
          <div class="vertical-spacer"></div>
        </div>
        <div class="col-sm-12 col-md-4 text-center text-contrast">
          <div class="how-header">
            <i class="fa fa-comment"></i>
          </div>
          <div class="vertical-spacer-xs"></div>
          <div class="how-content">
            Inspire-toi des <strong>conseils les plus utiles</strong> des guides et voyageurs afin d'éviter attrapes-touristes et autres galères.
          </div>
          <div class="vertical-spacer"></div>
        </div>
        <div class="col-sm-12 col-md-4 text-center text-contrast">
          <div class="how-header">
            <i class="fa fa-cloud-download"></i>
          </div>
          <div class="vertical-spacer-xs"></div>
          <div class="how-content">
            Récupère ton <strong>itinéraire personalisé</strong>, partage-le avec tes amis et emène-le dans tes valises.
          </div>
          <div class="vertical-spacer"></div>
        </div>
      </div>
    </div>
    <h2 class="text-center">Destination du moment</h2>
    <p class='text-center'>EXPLORIZERS te permet de savoir quoi faire et quoi voir lors de ton prochain voyage.</p>
    <div class="vertical-spacer"></div>
  </div>
  <div class="hp-content">

  </div>
  </div>
   <div class="trending">
            <h4><%= link_to t('.seedestinations'), destinations_path %></h4>
    </div>


  <div class="row">
    <div class="explanation-hp">
      <div class="col-xs-12 col-md-4">
        <div class="box-content text-center">
          <h4><%= t('.thirdline_title') %></h4>
          <h5><%= t('.thirdline') %></h5>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="box-content text-center">
          <h4><%= t('.fourthline_title') %></h4>
          <h5><%= t('.fourthline') %></h5>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="box-content text-center">
          <h4><%= t('.fifthline_title') %></h4>
          <h5><%= t('.fifthline') %></h5>
        </div>
      </div>
    </div>
  </div>

  <div class="vertical-spacer-xs"></div>
  <div id="social_links">
    <a href="https://www.facebook.com/explorizers" target="_blank">
      <i class="fa fa-facebook fa-2x"></i>
    </a>
    <a href="http://instagram.com/explorizers/" target="_blank">
      <i class="fa fa-instagram fa-2x"></i>
    </a>
    <a href="https://www.pinterest.com/explorizers/" target="_blank">
      <i class="fa fa-pinterest fa-2x"></i>
    </a>
    <a href="https://twitter.com/Explorizers_" target="_blank">
      <i class="fa fa-twitter fa-2x"></i>
    </a>
    <div class="vertical-spacer-xs"></div>
  </div>
</div>







