<% content_for :navbar_hp_css do %>
  <%= stylesheet_link_tag 'navbar_hp' %>
<% end %>

<% content_for :logo_hp do %>
  <%= true %>
<% end %>

<div class="homepage_story">
  <div class="fullpage">
    <div id="homeblock" class="banner text-center">
      <div class="title">
        <h1><%= t('.firstline') %></h1>
        <h2><%= t('.secondline') %></h2>
        <h2><%= t('.thirdline') %></h2>
      </div>
      <div class="vertical-spacer-xs"></div>
      <div class="tr-grey-bg">
        <%= form_for(Trip.new, html: { class: "form-inline" }) do |f| %>
          <div class="form-group minor-block" class="text-center">
            <%= f.hidden_field(:latitude) %>
            <%= f.hidden_field(:longitude) %>
            <%= f.search_field(:query, placeholder: t('.searchplaceholder')) %>
            <%= f.submit('Go', class: 'btn btn-info btn-sm') %>
          </div>
        <% end %>
      </div>
      <div class="trending">
        <i class="fa fa-thumbs-o-up fa-2x"></i>
        <h4><%= t('.trending') %></h4>
      </div>

    </div>
    <div class="arrow-down text-center">
      <i class="fa fa-angle-down"></i>
    </div>
  </div>
  <div id="homepage-content">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-4">
          <div class="feature text-center effect-white-shadow">
            <%= image_tag 'home_friends2.png', class: "img-responsive" %>
            <h4><%= t('.subtitle1') %></h4>
            <p><%= t('.text1') %></p>
          </div>
        </div>
        <div class="col-xs-12 col-md-4">
          <div class="feature text-center effect-white-shadow">
            <%= image_tag 'home_map.png', class: "img-responsive" %>
            <h4><%= t('.subtitle2') %></h4>
            <p><%= t('.text2') %></p>
          </div>
        </div>
        <div class="col-xs-12 col-md-4">
          <div class="feature text-center effect-white-shadow">
            <%= image_tag 'home_camel.png', class: "img-responsive" %>
            <h4><%= t('.subtitle3') %></h4>
            <p><%= t('.text3') %></p>
          </div>
        </div>
        <div class="col-xs-12 col-md-12">
          <div class="feature text-center effect-white-shadow">
            <div class="row text-center">
              <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <h3>  <%= t('.concept', :default => "Concept") %></h3>
              </div>
              <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
              <%= link_to t('.becomeexplo'), new_user_registration_path, {class: "btn btn-primary"} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<%= content_for(:before_js) do %>
  <%= javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false&libraries=places&amp;key=AIzaSyCf77HD5LQkLbAcZWkBXKj-DLkXQJ9vHEc" %>
<% end %>