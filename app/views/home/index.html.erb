<% content_for :navbar_hp_css do %>
  <%= stylesheet_link_tag 'navbar_hp' %>
<% end %>

<% content_for :logo_hp do %>
  <%= true %>
<% end %>

<div class="homepage_story">
  <div class="fullpage">
    <div id="homeblock" class="banner text-center">
      <div class="title">
        <h1><%= t('.firstline') %></h1>
        <!-- <div class="vertical-spacer-xs"></div> -->
        <h3>Le meilleur du web pour organiser ton voyage dans un seul endroit</h3>
      </div>
      <div class="vertical-spacer-xxs"></div>
      <div class="tr-grey-bg">
        <% if user_signed_in? %>
        <%= form_for(Trip.new, html: { class: "form-inline" }) do |f| %>
          <div class="form-group minor-block" class="text-center">
            <%= f.hidden_field(:latitude) %>
            <%= f.hidden_field(:longitude) %>
            <%= f.search_field(:query, placeholder: t('.searchplaceholder'), required: true ) %>
            <%= f.submit( t('.searchbutton'), class: 'btn btn-info btn-sm') %>
          </div>
          <% end %>
        <% else %>

          <div>
            <%= image_tag 'homepage-partners-logos.png', id: 'references-logos' %>
          </div>
          <div class="vertical-spacer-xs"></div>
          <h3><%= link_to 'INSCRIPTION GRATUITE', new_user_registration_path,  {class: "btn btn-info btn-lg"}%></h3>
        <% end %>

      </div>

      <!-- <div class="vertical-spacer"></div> -->
      <!-- <div class="vertical-spacer-sm"></div> -->
    </div>
  </div>

  <div class="partners-logos">
    <!-- <p class="text-center">Les avis des plus grands sites</p> -->
    <div class="container-fluid">
      <div class="row text-center">
        <div class="col-xs-4 col-sm-2">
          <%= image_tag('ta_logo_rating.png', class:'img-responsive fixed-height') %>
        </div>
        <div class="col-xs-4 col-sm-2">
          <%= image_tag('gg_logo_rating.png', class:'img-responsive fixed-height') %>
        </div>
        <div class="col-xs-4 col-sm-2">
          <%= image_tag('fsq_logo_rating.png', class:'img-responsive fixed-height') %>
        </div>
        <div class="col-xs-4 col-sm-2">
          qsdqsdqs
        </div>
        <div class="col-xs-4 col-sm-2">
          qsfsgdrh
        </div>
        <div class="col-xs-4 col-sm-2">
          xbfccc
        </div>
      </div>
    </div>
  </div>
   <div class="trending">
            <h4><%= link_to t('.seedestinations'), destinations_path %></h4>
    </div>


  <div class="row">
    <div class="explanation-hp">
      <div class="col-xs-12 col-md-4">
        <div class="box-content text-center">
          <h4><%= t('.thirdline_title') %></h4>
          <h5><%= t('.thirdline') %></h5>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="box-content text-center">
          <h4><%= t('.fourthline_title') %></h4>
          <h5><%= t('.fourthline') %></h5>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="box-content text-center">
          <h4><%= t('.fifthline_title') %></h4>
          <h5><%= t('.fifthline') %></h5>
        </div>
      </div>
    </div>
  </div>

  <div class="vertical-spacer-xs"></div>
