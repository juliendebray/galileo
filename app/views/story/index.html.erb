<% content_for(:title) do %>
  <%= "Explorizers | Notre projet" %>
<% end %>

<% content_for(:description) do %>
  <%= "With more and more people joining the project, most of our story belongs to the future" %>
<% end %>
<div class="homepage_story">
  <div id="story" class="story">

    <div id="titleblock" class="text-center">
      <div class="title">
        <h2><%= t('.title', :default => "Concept") %></h2>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <h4> <%= t('.story1') %></h4><br>
        <h4> <%= t('.story2') %></h4><br>
        <h4> <%= t('.story3') %></h4><br>
      </div>
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
         <%= link_to t('.new_trip'), root_path, {class: "btn btn-info"} %>
         <div class="vertical-spacer-xs"></div>
         <%= link_to t('.contact'), new_contact_path %>
         <div class="vertical-spacer-xs"></div>
      </div>
      <div class="vertical-spacer"></div>
        <div class="fb-like" data-href="https://www.facebook.com/explorizers" data-layout="standard" data-action="like" data-show-faces="false" data-share="false" data-colorscheme="dark"></div>
      </div>
    </div>
  </div>
</div>