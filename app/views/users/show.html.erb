<div class="container content">

  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <h1>My account</h1>
      </div>
    </div>
  </div>

  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <h2>My trips</h2>
      </div>
    </div>

    <div class="row">
      <% @user.trips.each do |trip| %>
        <div class="col-md-3">
          <div class="tripbox">
            <%= link_to trip.title, start_trip_path(trip) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>My friends</h2>
      </div>
    </div>
  </div>
</div>