<%= bootstrap_form_for([@trip, @trip.experiences.new],
  url: experience_within_trip_path(@trip),
  remote: true) do |f| %>
  <div class="actions">
    <%= f.text_field :name, hide_label: true, placeholder: t('form_name') %>
    <%= f.text_field :address, hide_label: true, placeholder: t('form_address') %>
    <%= f.text_area :description, hide_label: true, placeholder: t('form_description')  %>
    <%= f.hidden_field :latitude %>
    <%= f.hidden_field :longitude %>
    <%= f.submit( t('form_add')) %>
  </div>
<% end %>
