<%= bootstrap_form_for([@trip, @trip.trip_comments.new], remote: true) do |f| %>
  <div class="actions">
    <%= f.text_field :name, placeholder:'Write your name here' %>
    <%= f.text_field :address, placeholder:'What is the address?' %>
    <%= f.text_area :description, placeholder: 'What it is about?' %>
    <%= f.hidden_field :latitude %>
    <%= f.hidden_field :longitude %>
    <%= f.submit 'Partager!' %>
  </div>
<% end %>
