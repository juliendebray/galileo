<body class="contactpage">

  <div class="container">

    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="box-content">
          <%= form_tag contacts_path, :class => "form-horizontal" do %>
            <fieldset>
              <h2><%= t('.title', :default => "Contact") %>
              </h2>
              <div class="form-group">
                <span class="col-xs-1 col-xs-offset-1 text-center"><i class="fa fa-user bigicon"></i></span>
                <div class="col-xs-9">
                    <input id="lname" name="name" type="text" placeholder="<%= t('.name') %>"class="form-control" required>
                </div>
              </div>

              <div class="form-group">
                <span class="col-xs-1 col-xs-offset-1 text-center"><i class="fa fa-envelope bigicon"></i></span>
                <div class="col-xs-9">
                    <input id="email" name="email" type="email" placeholder="<%= t('.email') %>"class="form-control" required>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-1 col-xs-offset-1 text-center">
                  <i class="fa fa-pencil-square-o bigicon"></i>
                </div>
                <div class="col-xs-9">
                    <textarea class="form-control" id="message" name="message" placeholder="<%= t('.message') %>"rows="7" required></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="col-xs-12 text-center">
                    <button type="submit" class="btn btn-success btn-lg"> <%= t('.submit') %></button>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
