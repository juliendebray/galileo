<%= content_for :title do %>
  <%= "Soyez inspiration en explorant notre sélection des plus beux endroits sur Terre" %>
<% end %>
<%= content_for (:description) do %>
  <%= "Explorez le monde et toutes ses richesse, laissez vous réver ou préparer votre prochain voyage ;)" %>
<% end %>
<body class="destinations_experiences">
  <div class="all-exp-page">
    <div class="container-fluid">
      <div id="titleblock" class="text-center">
        <div class="title">
          <h1><%= t('.title') %></h1>
        </div>
      </div>
      <% for experience in @experiences %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="experience-box">
            <%= link_to experience_path(experience), target: "_blank" do %>
              <div class="experience-picture text-center">
                <% if experience.experience_pictures.first %>
                  <%= image_tag experience.experience_pictures.first.picture.url(:medium), class: "img-responsive" %>
                <% else %>
                  <%= image_tag 'https://s3-eu-west-1.amazonaws.com/philae-floju/photos_usa/usa_glacier_park_1.jpg' %>
                <% end %>
              </div>
              <div class="experience-name text-center">
                <small><%= experience.name %></small><br>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="vertical-spacer-xs"></div>
  <div id="pagination" class="text-center">
    <%= paginate @experiences %>
  </div>
  <div class="vertical-spacer-xs"></div>
<%= render partial: 'shared/footer' %>
</body>