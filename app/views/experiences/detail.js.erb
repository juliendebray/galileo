$( document ).ready(function() {
  $('#myExperienceModal').modal('show');
  $('.experience-content').html(
    '<%= j render("experience_modal.html.erb",
    {experience: @experience, trip: @trip, trip_experiences: @trip_experiences} ) %>'
  );
  $('.experience-title').html('<%= j @experience.name %>');
  $(".owl-carousel.banner").owlCarousel({
    items: 1,
    singleItem: true,
    navigation : false,
    pagination : true,
    slideSpeed : 300,
    paginationSpeed : 400,
    rewindSpeed: 1,
    slideSpeed: 300
    // lazyLoad : true, // TODO: set img class and data-src and css accordingly (if needed)
  });
});



