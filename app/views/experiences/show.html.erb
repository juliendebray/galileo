<%= content_for :title do %>
 <%= @experience.name %>
<% end %>
<div class="wrapper text-center">
  <h1><%= @experience.name %></h1>
  <div class="vertical-spacer-xs"></div>
  <div class="container">

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
        <p><%= @experience.description %></p>
      </div>
    </div>

    <div class="vertical-spacer-xs"></div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
        <% if @experience.experience_pictures.any? %>
          <div class="exp-picture-block table-responsive text-center">
            <table class="table">
              <tbody>
                <tr>
                  <% @experience.experience_pictures(1..3).each do |pic| %>
                    <td>
                      <%= image_tag pic.picture.url(:small) %>
                    </td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>

<!--     <div class="fb-share-button" data-href="http://www.explorizers.com/experiences/<%= "#{@experience.id}" %>" data-layout="button"></div> -->


<!-- Twitter: https://dev.twitter.com/web/tweet-button
    <a class="twitter-share-button"
      href="www.explorizers.com/experience/<%= "#{@experience.id}" %>" data-count="none" data-text="Checking out Explorizers">
    Tweet this
    </a> -->

    <div class="vertical-spacer-xs"></div>

    <div class="row text-center">
      <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
        <div id="exp_review_block">
          <h4 class="text-center">Les avis et conseils des Explorizers</h4>
          <p><i>Note moyenne des Explorizers:</i> <b><%= @experience.average_rating %></b>/10</p>
          <% if @experience.experience_reviews.any? %>
            <% @experience.experience_reviews.each do |er| %>
              <p>
                <i class="fa fa-quote-left"></i>
                <%= "#{er.comment}" %>
                <i class="fa fa-quote-right"></i>
              </p>
            <% end %>
          <% else %>
          <p>Sois le 1er à donner ton avis ci-dessous!</p>
          <% end %>
        </div>
      </div>
    </div>


    <div class="vertical-spacer-xs"></div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
        <div id="exp_review_block">
          <h4>Donne ton avis</h4>
          <%= bootstrap_form_for([@experience, ExperienceReview.new], layout: :inline) do |f| %>
            <%= f.text_field :comment, hide_label: true, placeholder: "Donne ton avis en 140 caractères max!", required: true, size: 75, maxlength: 140 %>
            <%= f.number_field :rating, hide_label: true, placeholder: "Note entre 0 et 10", required: true, min: 0, max: 10 %>
            <%= f.submit( t('expbuttonadd'), class: "btn btn-info") %>
          <% end %>
        </div>
      </div>
    </div>

    <% if @trip_comments.any? %>
      <h4>Les tips des Explorizers</h4>
      <% @trip_comments.each do |tc| %>
        <p>
          <i class="fa fa-quote-left"></i>
          <%= "#{tc.description}" %>
          <i class="fa fa-quote-right"></i>
        </p>
      <% end %>
     <% end %>

    <div class="vertical-spacer-sm"></div>

    <div class="text-center">
     <%= link_to 'Commencer mon voyage!', root_path, class: "btn btn-info" %>
    </div>
<!--     Démarrer voyage avec lat et lon de l'expérience -->

  </div>
</div>