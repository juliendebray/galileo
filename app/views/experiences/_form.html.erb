<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
  <div class="box-content">
    <%= bootstrap_form_for(@experience) do |f| %>
      <!-- Errors explanation -->
      <% if @experience.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@experience.errors.count, "error") %> prohibited this experience from being saved:</h2>
          <ul>
          <% @experience.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <!-- Form -->
      <div class="actions text-center">
        <h4> <%= t('exp_share_text1') %></h4>
        <div class="vertical-spacer-xs"></div>
        <%= f.text_field :name, hide_label: true, placeholder: "Name: Jurassic Park", required: true%>
        <%= f.text_field :address, hide_label: true, placeholder: "Place: Isla Nublar, Costa Rica", required: true %>
        <%= f.text_area :description, hide_label: true, placeholder: "Description: Great theme park on dinosaurs, closed in 1993 but reopened in 2015. Very intense, had a lot of fun!", required: true %>
        <%=f.text_field :average_rating, hide_label: true, placeholder: "Note: 9.1" %>
        <%= f.submit( t('expbuttonadd'), class: "btn btn-info") %>

      </div>
    <% end %>
  </div>
</div>

<% content_for(:before_js) do %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyCf77HD5LQkLbAcZWkBXKj-DLkXQJ9vHEc" %>
<% end %>
