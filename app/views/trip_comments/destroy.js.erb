$( document ).ready(function() {
  var id = parseInt($('.infobox-container').attr('id'));
  ib.close();
  ibOpened = false;
  if (commentsMarkers[id] != null) {
    // commentsMarkers[id].setMap(null);
    // TODO: remove marker definitevely
    commentsMarkers[id].serviceObject.setPosition(new google.maps.LatLng(-90, 0));
  }
  if ($('#guests-comments').hasClass('menu-selected')) {
    var map = handler.getMap();
    setMapWithGuestComments(<%= @trip.id %>, map, function(r) {
      requestingMarkers = r;
    });
  }
});